{
  "IdentityServer4": {
    "Clients": {
      "api-client": {
        "ClientId": "api-client",
        "ClientName": "API Client",
        "AllowedGrantTypes": [ "client_credentials" ],
        "RequireClientSecret": true,
        "ClientSecrets": [
          {
            "Type": "Secret",
            "Value": "api-client-secret"
          }
        ],
        "AllowedScopes": [ "api" ]
      }
    },
    "ApiResources": {
      "api": {
        "Name": "API",
        "DisplayName": "API Resource",
        "UserClaims": {
          "role"
        }
      }
    },
    "IdentityResources": {
      "OpenId": {
        "Name": "openid",
        "DisplayName": "OpenID",
        "Required": true,
        "UserClaims": {
          "sub"
        }
      },
      "Profile": {
        "Name": "profile",
        "DisplayName": "Profile",
        "Required": false,
        "UserClaims": {
          "name",
          "email"
        }
      }
    }
  }
}